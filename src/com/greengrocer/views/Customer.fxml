<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.greengrocer.controllers.CustomerController"
            styleClass="main-container">
    
    <!-- Top Bar -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <Label text="ðŸ¥¬ Group17 GreenGrocer" styleClass="brand-title"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Search products..." 
                           styleClass="search-field" prefWidth="250"/>
                <Button text="ðŸ”" onAction="#handleSearch" styleClass="icon-button"/>
                <Button text="Clear" onAction="#handleClearSearch" styleClass="secondary-button"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- User Info and Actions -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button fx:id="cartButton" text="ðŸ›’ Cart (0)" onAction="#handleOpenCart" 
                        styleClass="cart-button"/>
                <Label fx:id="usernameLabel" text="Welcome, User" styleClass="username-label"/>
                <MenuButton text="Menu" styleClass="menu-button">
                    <items>
                        <MenuItem text="My Orders" onAction="#handleViewOrders"/>
                        <MenuItem text="My Profile" onAction="#handleEditProfile"/>
                        <MenuItem text="Messages" onAction="#handleMessages"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Logout" onAction="#handleLogout"/>
                    </items>
                </MenuButton>
            </HBox>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll">
            <VBox spacing="20" styleClass="main-content">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <!-- Vegetables Section -->
                <TitledPane fx:id="vegetablesPane" text="ðŸ¥• Vegetables" expanded="true" 
                            styleClass="product-section">
                    <ScrollPane fitToWidth="true" prefHeight="280" styleClass="products-scroll">
                        <FlowPane fx:id="vegetablesContainer" hgap="15" vgap="15" 
                                  styleClass="products-container">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                        </FlowPane>
                    </ScrollPane>
                </TitledPane>
                
                <!-- Fruits Section -->
                <TitledPane fx:id="fruitsPane" text="ðŸŽ Fruits" expanded="true" 
                            styleClass="product-section">
                    <ScrollPane fitToWidth="true" prefHeight="280" styleClass="products-scroll">
                        <FlowPane fx:id="fruitsContainer" hgap="15" vgap="15" 
                                  styleClass="products-container">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                        </FlowPane>
                    </ScrollPane>
                </TitledPane>
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER" spacing="20">
            <padding>
                <Insets top="8" right="20" bottom="8" left="20"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="loyaltyLabel" text="" styleClass="loyalty-label"/>
        </HBox>
    </bottom>
    
</BorderPane>
