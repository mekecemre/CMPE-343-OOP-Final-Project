<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.greengrocer.controllers.LoginController"
            styleClass="main-container">
    
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-box">
            <padding>
                <Insets bottom="40" left="60" right="60" top="40" />
            </padding>
            
            <!-- Title -->
            <Label text="ðŸ¥¬ Group17 GreenGrocer" styleClass="app-title"/>
            <Label text="Welcome! Please login to continue." styleClass="subtitle"/>
            
            <!-- Login Form -->
            <VBox spacing="15" styleClass="form-container">
                <VBox spacing="5">
                    <Label text="Username" styleClass="field-label"/>
                    <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field"/>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
                
                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                        styleClass="primary-button" maxWidth="Infinity"/>
                
                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" styleClass="small-text"/>
                    <Hyperlink fx:id="registerLink" text="Register here" onAction="#handleRegisterLink"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
    
</BorderPane>
